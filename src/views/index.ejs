<!-- 英雄区域 -->
<section class="hero-section">
    <div class="container">
        <div class="hero-content">
            <h1 class="hero-title"><%= t('home:heroTitle') %></h1>
            <p class="hero-description"><%= t('home:heroDescription') %></p>
            <div class="hero-buttons">
                <a href="/games" class="btn btn-primary btn-lg">
                    <%= t('home:startTraining') %>
                </a>
                <a href="/about" class="btn btn-outline btn-lg">
                    <%= t('home:learnMore') %>
                </a>
            </div>
        </div>
        <div class="hero-image">
            <img src="/images/hero-image.png" alt="<%= t('home:heroImageAlt') %>" class="main-image">
            <div class="brain-particles"></div>
        </div>
    </div>
</section>

<!-- 游戏分类 -->
<section class="game-categories-section">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title"><%= t('home:exploreGames') %></h2>
            <p class="section-description"><%= t('home:categoriesDescription') %></p>
        </div>
        
        <div class="categories-grid">
            <!-- 记忆力游戏 -->
            <div class="category-card">
                <div class="category-icon">
                    <span class="icon-brain"></span>
                </div>
                <h3 class="category-title"><%= t('games:memory') %></h3>
                <p class="category-description"><%= t('games:memoryDescription') %></p>
                <a href="/games/category/memory" class="category-link">
                    <%= t('home:exploreCategory') %> <span class="icon-arrow-right"></span>
                </a>
            </div>
            
            <!-- 注意力游戏 -->
            <div class="category-card">
                <div class="category-icon">
                    <span class="icon-focus"></span>
                </div>
                <h3 class="category-title"><%= t('games:attention') %></h3>
                <p class="category-description"><%= t('games:attentionDescription') %></p>
                <a href="/games/category/attention" class="category-link">
                    <%= t('home:exploreCategory') %> <span class="icon-arrow-right"></span>
                </a>
            </div>
            
            <!-- 逻辑推理游戏 -->
            <div class="category-card">
                <div class="category-icon">
                    <span class="icon-puzzle"></span>
                </div>
                <h3 class="category-title"><%= t('games:logic') %></h3>
                <p class="category-description"><%= t('games:logicDescription') %></p>
                <a href="/games/category/logic" class="category-link">
                    <%= t('home:exploreCategory') %> <span class="icon-arrow-right"></span>
                </a>
            </div>
            
            <!-- 语言能力游戏 -->
            <div class="category-card">
                <div class="category-icon">
                    <span class="icon-text"></span>
                </div>
                <h3 class="category-title"><%= t('games:language') %></h3>
                <p class="category-description"><%= t('games:languageDescription') %></p>
                <a href="/games/category/language" class="category-link">
                    <%= t('home:exploreCategory') %> <span class="icon-arrow-right"></span>
                </a>
            </div>
            
            <!-- 数学游戏 -->
            <div class="category-card">
                <div class="category-icon">
                    <span class="icon-calculator"></span>
                </div>
                <h3 class="category-title"><%= t('games:math') %></h3>
                <p class="category-description"><%= t('games:mathDescription') %></p>
                <a href="/games/category/math" class="category-link">
                    <%= t('home:exploreCategory') %> <span class="icon-arrow-right"></span>
                </a>
            </div>
        </div>
    </div>
</section>

<!-- 特色内容 -->
