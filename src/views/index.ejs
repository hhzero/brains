<!-- 英雄区域 -->
<section class="hero bg-gradient-to-r from-blue-500 to-blue-700 text-white py-16">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-6"><%= t('home:heroTitle') %></h1>
      <p class="text-xl mb-8"><%= t('home:heroDescription') %></p>
      <div class="flex justify-center space-x-4">
        <a href="/games" class="bg-white text-blue-600 hover:bg-blue-50 px-8 py-3 rounded-lg font-semibold transition duration-300">
          <%= t('home:startTraining') %>
        </a>
        <a href="/about" class="border-2 border-white text-white hover:bg-white hover:text-blue-600 px-8 py-3 rounded-lg font-semibold transition duration-300">
          <%= t('home:learnMore') %>
        </a>
      </div>
    </div>
  </div>
</section>

<!-- 游戏分类 -->
<section class="py-16 bg-gray-50">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-12"><%= t('home:trainingPrograms') %></h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <% config.gameCategories.slice(0, 3).forEach(function(category) { %>
        <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition duration-300 flex flex-col items-center">
          <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mb-4">
            <i class="icon icon-<%= category.id %> text-blue-600 text-2xl"></i>
          </div>
          <h3 class="text-xl font-semibold text-center mb-3"><%= t(`games:categories.${category.id}.name`) %></h3>
          <p class="text-gray-600 text-center mb-4 flex-grow"><%= t(`games:categories.${category.id}.description`) %></p>
          <div class="text-center w-full mt-auto">
            <a href="/games/category/<%= category.id %>" class="text-blue-600 hover:text-blue-700 font-medium inline-block">
              <%= t('games:exploreCategory') %> →
            </a>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
</section>

