<!-- 用户评价 -->
<section class="py-16 bg-gray-50">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-12"><%= t('home:userFeedback') %></h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <% try { %>
        <% if (testimonials && testimonials.length > 0) { %>
          <!-- 从API获取的评价 -->
          <% testimonials.forEach(function(testimonial) { %>
            <div class="bg-white rounded-lg shadow-md p-6 h-full flex flex-col">
              <div class="flex items-center mb-4">
                <div class="w-12 h-12 bg-blue-500 rounded-full flex items-center justify-center text-white font-bold text-xl">
                  <%= testimonial.initial %>
                </div>
                <div class="ml-4">
                  <h4 class="font-semibold"><%= testimonial.name %></h4>
                  <div class="text-yellow-400">★★★★★</div>
                </div>
              </div>
              <p class="text-gray-600 flex-grow">"<%= testimonial.comment %>"</p>
            </div>
          <% }); %>
        <% } else { %>
          <!-- 默认评价 -->
          <div class="bg-white rounded-lg shadow-md p-6 h-full flex flex-col">
            <div class="flex items-center mb-4">
              <div class="w-12 h-12 bg-blue-500 rounded-full flex items-center justify-center text-white font-bold text-xl">
                <%= t('home:testimonials.default.user1.name').charAt(0) %>
              </div>
              <div class="ml-4">
                <h4 class="font-semibold"><%= t('home:testimonials.default.user1.name') %></h4>
                <div class="text-yellow-400">★★★★★</div>
              </div>
            </div>
            <p class="text-gray-600 flex-grow">"<%= t('home:testimonials.default.user1.text') %>"</p>
          </div>
          <div class="bg-white rounded-lg shadow-md p-6 h-full flex flex-col">
            <div class="flex items-center mb-4">
              <div class="w-12 h-12 bg-green-500 rounded-full flex items-center justify-center text-white font-bold text-xl">
                <%= t('home:testimonials.default.user2.name').charAt(0) %>
              </div>
              <div class="ml-4">
                <h4 class="font-semibold"><%= t('home:testimonials.default.user2.name') %></h4>
                <div class="text-yellow-400">★★★★★</div>
              </div>
            </div>
            <p class="text-gray-600 flex-grow">"<%= t('home:testimonials.default.user2.text') %>"</p>
          </div>
          <div class="bg-white rounded-lg shadow-md p-6 h-full flex flex-col">
            <div class="flex items-center mb-4">
              <div class="w-12 h-12 bg-purple-500 rounded-full flex items-center justify-center text-white font-bold text-xl">
                <%= t('home:testimonials.default.user3.name').charAt(0) %>
              </div>
              <div class="ml-4">
                <h4 class="font-semibold"><%= t('home:testimonials.default.user3.name') %></h4>
                <div class="text-yellow-400">★★★★★</div>
              </div>
            </div>
            <p class="text-gray-600 flex-grow">"<%= t('home:testimonials.default.user3.text') %>"</p>
          </div>
        <% } %>
      <% } catch (error) { %>
        <!-- 错误时显示默认评价 -->
        <div class="bg-white rounded-lg shadow-md p-6 h-full flex flex-col">
          <div class="flex items-center mb-4">
            <div class="w-12 h-12 bg-blue-500 rounded-full flex items-center justify-center text-white font-bold text-xl">
              <%= t('home:testimonials.default.user1.name').charAt(0) %>
            </div>
            <div class="ml-4">
              <h4 class="font-semibold"><%= t('home:testimonials.default.user1.name') %></h4>
              <div class="text-yellow-400">★★★★★</div>
            </div>
          </div>
          <p class="text-gray-600 flex-grow">"<%= t('home:testimonials.default.user1.text') %>"</p>
        </div>
      <% } %>
    </div>
  </div>
</section>

